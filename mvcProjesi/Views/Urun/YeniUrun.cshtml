@model mvcProjesi.Models.Entity.TBLURUNLER
  
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <div>
            <label>Ürün Ad</label>
            <input type="text" class="form-control" name="URUNAD" required="" maxlength="30" />
        </div>
        <div>
            <label>Ürün Kategori</label>
            @Html.DropDownListFor(m=> m.TBLKATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.dgr,new { @class="form-control"})
        </div>
        <div>
            <label>Ürün Fiyatı</label>
            <input type="text" class="form-control" name="FIYAT" required="" />
        </div>
        <div>
            <label>Marka</label>
            <input type="text" class="form-control" name="MARKA" />
        </div>
        <div>
            <label>Stok</label>
            <input type="text" class="form-control" name="STOK" />
        </div>

    </div>

    <div style="margin-top:15px">

        <button class="btn btn-info">Ürün Ekle</button>

    </div>



</form>

